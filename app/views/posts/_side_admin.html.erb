<style>
#admin-box{
    width:auto;
    font-size: 12px;
    line-height: 20px;
    /*right: -200px;*/
    right:0px;
    top: 0%; /* change this value to place the menu higher or lower */
    position: fixed;
    z-index: 100;
        height:100%;
}

#tab{
    float: left;
    list-style: none outside none;
    margin: 0;
    padding: 0;
    position: relative;
    z-index: 99;
}

#tab li span{
    display: block;
    padding: 0 5px;
    position: relative;
}



.hide{
    margin-right:0px;
}

.show{
    margin-right:95px;
}

#feeder{
	background-color: white;
}
#admin-parts{
	width:0px;
	float:right;
	clear:right;
	background-color: black;
    opacity:0.8;
    height:100%;
}

#admin-button{
  position: relative;
	float:left;
	/*background-color: white;*/
	height:100%;
  opacity:1;
  clear:left;
  width: 73px;
}

#tab{
  position: absolute;
  top: 44%;
}

#pullout{
  -webkit-transform: rotate(-90deg);
-moz-transform: rotate(-90deg);
-ms-transform: rotate(-90deg);
-o-transform: rotate(-90deg);
filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
background-color: #4389C0;
font-size: 25px;
color: white;
padding: 10px;
border-radius: 5%/48%;
}

#admin-button{
	cursor: pointer;
	}
#admin-title{
	font-size:40px;
	line-height: 30px
}
#admin-upload li a{
	/*font-size:20px;*/
	/*line-height: 30px;*/
	font-weight:thin;
	color:#3799CA;

}
#admin-filter{
}

h5.admin{
	color:white;
	font-weight: normal;
}
</style>

<div id='admin-box' class='shide' >
	<div id='admin-parts'>
		<div id="admin-title">
			<a class="brand" href="/">Flapjack</a>
		</div>
		<div id="admin-upload">
	    	<h5 class='admin'>Add Content...</h5>
			<ul class="nav">
	      <li>
					<a href="/photos/new">Create Photo</a>
				</li>
				<li>
					<a href="/links/new">Create Link</a>
				</li>
				<li>
					<a href="/notes/new">Create Note</a>
				</li>
				<li>
					<a href="/videos/new">Create Video</a>
				</li>
				<% unless current_user %>
				<li>
					<a href="/users/sign_up">Sign Up</a>
				</li>
				<li>
					<a href="/users/sign_in">Sign In</a>
				</li>
				<% else %>
				<li>
					<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
				</li>
				<% end %>
			</ul>
		</div>
		<div id='admin-filter'>
	    <div class="option-combo">
	    	<h5 class='admin'>Filter Posts...</h5>
	      <ul id="filter" class="nav" data-option-key="filter">
	        <li><a href="#show-all" data-filter="*" class="selected">show all</a></li>
	        <li><a href="#photos" data-filter=".post-photo">pictures</a></li>
	        <li><a href="#videos" data-filter=".post-video">video</a></li>
	        <li><a href="#links" data-filter=".post-link">links</a></li>
	        <li><a href="#notes" data-filter=".post-note">notes</a></li>
	      </ul>
	    </div>
		</div>
		<div id='admin-feeder'>			<!--THIS NEEDS CHANGING!!!!!-->
			<h5>Latest Chat...</h5>
			<ul class='unstyled'>
				<% @last_comments.each do |comment| %>
				<li>
					<% if comment.user == current_user %>
						<a href="/posts/<%= comment.post.id %>" data-id="<%=comment.post.id%>" class="follow-text"><%= comment.body %></a> 
					<% elsif comment.user.followers.include? current_user %>
						<a href="/posts/<%= comment.post.id %>" data-id="<%=comment.post.id%>" class="follow-text"><%= comment.body %></a> <a href="/unfollow/comment/<%= comment.id %>" class="follow-user">unfollow</a>
					<% else %>
						<a href="/posts/<%= comment.post.id %>" data-id="<%=comment.post.id%>" class="follow-text"><%= comment.body %></a> <a href="/follow/comment/<%= comment.id %>" class="follow-user">follow-<%= comment.user.id %></a>
					<% end %>

				</li>
				<% end %>
			</ul>
		</div>
		<div id='feeder-post'><!--THIS NEEDS CHANGING!!!!!-->
		</div>
	</div>
	<div id='admin-button'>
		<div id="tab">
        <div id="pullout">Flapjack</div>
<!-- 				<%= image_tag 'arrowleft.png', :id => 'arrow' %>  -->
			<!-- post.photo.url(:large) %><img id="arrow" onclick="toggle('box');" src="/images/arrowleft.png"> -->
    </div>
	</div>
</div>
<script>


$('#admin-button').click(function(){
  if($(this).hasClass('revealed')) {
    $('#admin-parts').animate({width: "0"},920);
    $(this).removeClass('revealed');
  } else {
    $('#admin-parts').animate({width: "250"},920);
    $(this).addClass('revealed');
  }
})




      // filtering
       var $container = $('#iso-container');
      // initialize isotope
      $container.isotope({
        // options...
      });
      // filter items when filter link is clicked
      $('#filter a').click(function(){
        var selector = $(this).attr('data-filter');
        $container.isotope({ filter: selector });
        return false;
      });
  </script>
