<div id="window-pane">
	<div id="iso-container" class="super-list variable-sizes clearfix container-fluid">
		<% @posts.each do |post| %> 
			<%#	 seconds_to_end(post) %>
			<%= render 'post', post: post %>
		<% end %>
	</div>
</div>

<%= render 'side_admin' %>

<% @posts.each do |post| %>
	<script>
	// dynamically get sizes
	$(document).ready(function() {


	  $('.alert').delay(2000).slideUp('slow')
	  $('.alert:contains(site)').delay(10000).slideUp('slow')

	  // These are the top 5 site users posts. Maybe follow 1 or 2 to get started...

	  scale = <%= get_size_multiplier(post) %>

	  postWidth = $('#post-<%= post.id %>').width();
	  newWidth = postWidth * scale
	  postHeight = $('#post-<%= post.id %>').height();
	  newHeight = postHeight * scale
	  $('#post-<%= post.id %>').width(newWidth);
	  $('#post-<%= post.id %>').height(newHeight);
	  //$('#post-<%= post.id %>').css({height: 'auto'});
	  $('#caption-<%= post.id %>').css("transform", "scale(" + scale + "," + scale + ")");
	  $('#caption-<%= post.id %>').css("transform-origin", "top left");

	  //      $('#body-<%= post.id %>.post-body-note').css("transform","scale("+scale+","+scale+")");
	  // $('#body-<%= post.id %>.post-body-note').css("transform-origin","middle middle");


	  $('#body-<%= post.id %>.post-last-comment').css("transform", "scale(" + scale + "," + scale + ")");
	  $('#body-<%= post.id %>.post-last-comment').css("transform-origin", "bottom left");


	  $('#comment-<%= post.id %>').css("transform", "scale(" + scale + "," + scale + ")");
	  $('#comment-<%= post.id %>').css("transform-origin", "left 25px");
	});
	</script>
<% end %>

<%= render "post_js" %>
