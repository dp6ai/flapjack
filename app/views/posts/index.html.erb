<div id="container" class="super-list variable-sizes clearfix container-fluid">
	<% @posts.each do |post| %>
		<%= render 'post', post: post %>
	<% end %>
</div>
<% @posts.each do |post| %>
	<script>
				// dynamically get sizes
	      $(document).ready(function() {
	      	scale = <%= get_size_multiplier(post) %>
	     		postWidth = $('#post-<%= post.id %>').width();
	     		newWidth = postWidth*scale
					postHeight = $('#post-<%= post.id %>').height();
	     		newHeight = postWidth*scale
	     		$('#post-<%= post.id %>').width(newWidth);
	     		$('#post-<%= post.id %>').height(newHeight);
	     		$('#caption-<%= post.id %>').css("transform","scale("+scale+","+scale+")");
	     		$('#body-<%= post.id %>').css("transform","scale("+scale+","+scale+")");
	     		$('#comment-<%= post.id %>').css("transform","scale("+scale+","+scale+")");
	     		 $container.isotope( 'reLayout' )

				});
